<h1>Rails Items</h1>

<%= link_to "Create new item", new_portfolio_path if logged_in?(:site_admin)%>

<% @rails_portfolio_items.each do |port| %>
  <p><%= link_to port.title, portfolio_show_path(port) %></p>
  <p><%= port.subtitle %></p>
  <p><%= port.body %></p>
  <p><%= image_tag port.thumb_image unless port.thumb_image.nil? %></p>
  <%= link_to 'Edit', edit_portfolio_path(port) if logged_in?(:site_admin)%>
  <%= link_to 'Delete', portfolio_path(port), method: :delete, data: { confirm: "Are you sure?"} if logged_in?(:site_admin) %>

<% end %>
